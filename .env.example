# LLM Provider Configuration
# Options: OpenAI, Anthropic, OpenRouter, 自定义 (OpenAI 兼容)
LLM_PROVIDER=OpenAI

# OpenAI Configuration
OPENAI_API_KEY=sk1232-...
OPENAI_MODEL_NAME=gpt-4o
# OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic Configuration
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL_NAME=claude-3-sonnet-20240229

# OpenRouter Configuration
# OPENROUTER_API_KEY=sk-or-...

# Custom Configuration (OpenAI Compatible)
# To use custom provider (e.g. Ollama, vLLM), set LLM_PROVIDER="自定义 (OpenAI 兼容)"
# and configure the following OPENAI_* variables:
# OPENAI_API_BASE=http://localhost:11434/v1
# OPENAI_API_KEY=ollama
# OPENAI_MODEL_NAME=llama3

# Translation Dedicated Model Configuration (Optional)
# If not set, the main LLM_PROVIDER will be used for translation.
# TRANSLATION_LLM_PROVIDER=OpenAI
# TRANSLATION_OPENAI_API_KEY=sk-...
# TRANSLATION_OPENAI_MODEL_NAME=gpt-4o
# TRANSLATION_OPENAI_API_BASE=https://api.openai.com/v1
# TRANSLATION_ANTHROPIC_API_KEY=sk-ant-...
# TRANSLATION_ANTHROPIC_MODEL_NAME=claude-3-sonnet-20240229

# Related Work Dedicated Model Configuration (Optional)
# If not set, the main LLM_PROVIDER will be used for related work generation.
# RELATED_WORK_LLM_PROVIDER=OpenAI
# RELATED_WORK_OPENAI_API_KEY=sk-...
# RELATED_WORK_OPENAI_MODEL_NAME=gpt-4o
# RELATED_WORK_OPENAI_API_BASE=https://api.openai.com/v1
# RELATED_WORK_ANTHROPIC_API_KEY=sk-ant-...
# RELATED_WORK_ANTHROPIC_MODEL_NAME=claude-3-sonnet-20240229

# VLM (Vision Language Model) Dedicated Model Configuration (Optional)
# If not set, the main LLM_PROVIDER will be used for VLM tasks.
# VLM_LLM_PROVIDER=OpenAI
# VLM_OPENAI_API_KEY=sk-...
# VLM_OPENAI_MODEL_NAME=gpt-4o
# VLM_OPENAI_API_BASE=https://api.openai.com/v1
# VLM_ANTHROPIC_API_KEY=sk-ant-...
# VLM_ANTHROPIC_MODEL_NAME=claude-3-5-sonnet-20240620

# Dialogue Review Dedicated Model Configuration (Optional)
# If not set, the main LLM_PROVIDER will be used for review tasks.
# REVIEW_LLM_PROVIDER=OpenAI
# REVIEW_OPENAI_API_KEY=sk-...
# REVIEW_OPENAI_MODEL_NAME=gpt-4o
# REVIEW_OPENAI_API_BASE=https://api.openai.com/v1
# REVIEW_ANTHROPIC_API_KEY=sk-ant-...
# REVIEW_ANTHROPIC_MODEL_NAME=claude-3-5-sonnet-20240620

# LangSmith Tracing Configuration (Optional)
# LANGSMITH_TRACING=true
# LANGSMITH_ENDPOINT=https://api.smith.langchain.com
# LANGSMITH_API_KEY=lsv2_...
# LANGSMITH_PROJECT=SourceMind

# Langfuse Tracing Configuration (Optional)
# Enable Langfuse tracing
# LANGFUSE_PUBLIC_KEY=pk-lf-...
# LANGFUSE_SECRET_KEY=sk-lf-...
# LANGFUSE_HOST=https://cloud.langfuse.com
